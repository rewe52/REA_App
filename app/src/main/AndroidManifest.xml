<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vladislav.rea_attention">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BackgroundTheme"></activity>
        <activity
            android:name=".Activity.RegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BackgroundTheme"></activity>
        <activity
            android:name=".Activity.admin_Activity"
            android:label="@string/title_activity_admin_"
            android:screenOrientation="portrait"
            android:theme="@style/BackgroundTheme" />
        <activity
            android:name=".Activity.Categories"
            android:screenOrientation="portrait"
            android:theme="@style/BackgroundTheme"></activity>
        <activity
            android:name=".Activity.sendEmailActivity"
            android:theme="@style/BackgroundTheme"></activity>
    </application>

</manifest>